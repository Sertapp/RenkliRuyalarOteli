@model KullaniciUpdateDTO
<div class="card">
    <div class="card-header">
        <h3>@Model.Adi @Model.Soyadi</h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Kullanici" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id">

            <div class="input-group mb-3">
                <input type="text" asp-for="KullaniciAdi" class="form-control" placeholder="Kullanici Adi">
                <div class="input-group-append">
                    <div class="input-group-text">

                        <span class="fa-sharp fa-solid fa-user text-danger" asp-validation-for="KullaniciAdi"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                <input type="password" asp-for="TcNo" class="form-control" placeholder="Tc No">

                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="TcNo"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                <input type="file" asp-for="ImageFile" />
            </div>
            <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
